<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">Guideme</a>
    <div class="navbar-collapse collapse navbar-responsive-collapse">

      <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li>
            <% if current_user.admin? %>
              <%= link_to guides_path(status: :awaiting_for_approval) do %>
                <%= t('guides.pending_approvals') %> (<%= awaiting_for_approval_count %>)
              <% end %>
            <% end %>
          </li>
          <li><%= link_to t('guides.search.link'), search_guides_path %></li>
          <li><%= link_to "Link3", "/path3"  %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <% if current_user.guide.present? %>
                  <%= link_to t('guides.show'), user_guide_path(current_user, current_user.guide) %>
                <% else %>
                  <%= link_to t('users.edit'), edit_user_registration_path(current_user) %>
                <% end %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to t('users.sign_out'), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        </ul>

        <% unless current_user.guide.present? %>
          <%= link_to t('guides.new'), new_user_guide_path(current_user), class: "btn btn-primary navbar-btn navbar-right" %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>

