<div class="nested-fields">
  <div class="form-group">
    <%= f.label :course %>
    <%= f.text_field :course, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :institution %>
    <%= f.text_field :institution, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :finished_in %>
    <%= f.date_field :finished_in, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :level %>
    <%= f.select_tag :level, options_for_select(academic_educations_levels_for_select), class: 'form-control' %>
  </div>

  <%= link_to_remove_association f, class: 'btn btn-danger' do %>
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  <% end %>
</div>
