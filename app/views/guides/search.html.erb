<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'pages/guides/search' %>
<% end %>

<h1><%= t('guides.search.title') %></h1>

<div class="row">
  <div class="col-sm-3">
    <div class="form-group">
      <%= t('guides.search.search_radius') %>:
      <div class="input-group">
        <%= number_field_tag :radius, 1, min: 1, class: 'form-control' %>
        <div class="input-group-append">
          <span class="input-group-text">km</span>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="map"></div>

<div class="row" id="result"></div>


<script src="//maps.google.com/maps/api/js?key=<%= Figaro.env.google_maps_api_key %>"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<%= javascript_include_tag "maps" %>
<script>
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
</script>
