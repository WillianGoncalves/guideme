<h1><%= t('contracts.index.title') %></h1>

<div class="row">
  <div class="col-sm-4">
    <%= render 'search_form' %>
  </div>

  <div class="col-sm-8">
    <div class="center">
      <%= will_paginate renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    </div>

    <% @contracts.each do |contract| %>
      <%= render 'contract_card', contract: contract %>
    <% end %>

    <div class="center">
      <%= will_paginate renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    </div>
  </div>
</div>
